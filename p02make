# E-mail: mking24@uco.edu	                                        
# Date:   October, 2014 
#------------------------------------------------------------------
# Object files
#------------------------------------------------------------------
obj	=	p02.o p02lex.o
#------------------------------------------------------------------
p02:		${obj}
		g++ -o p02 ${obj} -ly -lm
#------------------------------------------------------------------
# File p02.cpp processes command line arguments
#------------------------------------------------------------------
p02.o:		p02.cpp p02lex.h p02tkn.h
		g++ -c -g p02.cpp
#------------------------------------------------------------------
# File p02lex.l is the lexical analyzer
#------------------------------------------------------------------
p02lex.cpp:	p02lex.l
		lex p02lex.l
		mv lex.yy.c p02lex.cpp
#------------------------------------------------------------------
# File p02lex.cpp is created by lex in the previous step
#------------------------------------------------------------------
p02lex.o:	p02lex.cpp p02lex.h p02tkn.h
		g++ -c -g p02lex.cpp
